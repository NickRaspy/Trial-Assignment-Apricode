@page
@model TA_Apricode.Pages.IndexModel

<h2>Список игр</h2>

<table class="table">
    <thead>
        <tr>
            <th>Название</th>
            <th>Разработчик</th>
            <th>Жанры</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model.Games)
        {
            <tr>
                <td>@game.Title</td>
                <td>@game.Developer</td>
                <td>@string.Join(", ", game.Genres)</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@game.Id">Редактировать</a> |
                    <a asp-page="./Details" asp-route-id="@game.Id">Детали</a> |
                    <a asp-page="./Delete" asp-route-id="@game.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-page="./Create" class="btn btn-primary">Добавить новую игру</a>